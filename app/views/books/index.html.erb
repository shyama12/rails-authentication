<div class="container m-5 align-self-center">
  <h1>Books List</h1>
  <div class="d-flex justify-content-between align-items-center w-400 flex-wrap">
    <% @books.each do |book| %>
      <div class="card mt-3 bg-transparent border-0" style="width: 400px;">
        <%= link_to book_path(book) do%>
            <div class="rounded-4" style="overflow: hidden;"><%= cl_image_tag book.photo.key, class: "card-img-top" %></div>
        <% end %>
        <div class="card-body ps-0">
            <p class="mb-0 fw-bold"><%= book.title %></p>
            <p class="mb-0"><%= book.author %></p>
            <p class="mb-0">PPD: Â£<%= book.price %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
