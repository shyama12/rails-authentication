<div class="container m-5">
  <h1>Books List</h1>
  <div class="d-flex justify-content-between align-items-center w-400 flex-wrap">
    <% @books.each do |book| %>
      <%= link_to book_path(book) do%>
        <div class="card border-0 rounded-4 m-3" style="overflow: hidden; width: 400px;">
          <%= cl_image_tag book.photo.key, class: "card-img-top" %>
          <div class="card-body pt-5">
              <h6 class="mb-0"><%= book.title %></h6>
              <p class="mb-0"><%= book.author %></p>
              <p class="mb-0">PPD: Â£<%= book.price %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
